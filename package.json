{
	"name": "amphibian-seo",
	"version": "1.3.6",
	"description": "Modern SSR-first SEO metadata toolkit for Next.js App Router. Supports OpenGraph, Twitter Cards, robots, alternates, JSON-LD, preload, meta/link tags, Apple Web App, and advanced TypeScript types. Fully compatible with generateMetadata and static rendering.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"test": "jest --roots tests",
		"test:watch": "jest --watch --roots tests",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"prepare": "npm run build",
		"prepublishOnly": "npm run lint && npm run test && npm run build",
		"publish": "npm publish --access public"
	},
	"keywords": [
		"nextjs",
		"nextjs-app-router",
		"nextjs-seo",
		"nextjs-metadata",
		"app-router",
		"app-directory",
		"seo",
		"ssr",
		"static-seo",
		"server-side-seo",
		"metadata",
		"generateMetadata",
		"typescript",
		"seo-toolkit",
		"opengraph",
		"open-graph",
		"twitter-cards",
		"twitter-meta",
		"meta-tags",
		"meta",
		"json-ld",
		"schema-org",
		"robots",
		"robots-meta",
		"alternates",
		"hreflang",
		"preload",
		"link-tags",
		"apple-web-app",
		"verification",
		"author",
		"publisher",
		"mobile-app",
		"ssr-seo",
		"react",
		"react-dom"
	],
	"author": "horror_amphibian",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HorrorAmphibian/amphibian-seo.git"
	},
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"eslint-config-prettier": "^10.1.8",
		"jest": "^30.1.3",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.4",
		"typedoc": "^0.28.13",
		"typescript": "^5.0.0"
	}
}
